{
    "name": "poodl",
    "version": "1.0.0",
    "description": "Senior Center App",
    "main": "server.js",
    "scripts": {
        "install-all": "yarn && yarn --cwd client",
        "start:server": "node server.js",
        "start:client": "yarn --cwd client start",
        "test:client": "yarn --cwd client test",
        "test:server": "mocha routes --recursive --extension 'test.js'",
        "test:api": "mocha test/api",
        "test:selenium": "mocha test/selenium",
        "server": "nodemon server.js",
        "cover:client": "yarn test:client --coverage",
        "cover:api": "nyc --reporter=lcov mocha test/api",
        "cover:server": "nyc --reporter=lcov mocha routes --recursive",
        "cover:server:no-clean": "nyc --no-clean --reporter=lcov mocha routes --recursive --extension 'test.js'",
        "coverage": "yarn cover:client && yarn cover:api && yarn cover:server:no-clean",
        "combine-coverage-files": "lcov -a client/coverage/lcov.info -a coverage/lcov.info -o coverage/total.info",
        "coveralls": "yarn combine-coverage-files && cat coverage/total.info | coveralls",
        "start:dev": "concurrently \"yarn server\" \"yarn start:client\"",
        "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
    },
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@sendgrid/mail": "^6.4.0",
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.18.3",
        "concurrently": "^4.0.1",
        "express": "^4.16.4",
        "express-jwt": "^5.3.1",
        "is-empty": "^1.2.0",
        "jsonwebtoken": "^8.3.0",
        "mongoose": "^5.3.11",
        "passport": "^0.4.0",
        "passport-jwt": "^4.0.0",
        "passport-local": "^1.0.0",
        "validator": "^10.9.0"
    },
    "devDependencies": {
        "chai": "^4.2.0",
        "chai-http": "^4.2.1",
        "chromedriver": "^2.46.0",
        "codacy-coverage": "^3.4.0",
        "coveralls": "^3.0.2",
        "mocha": "^6.0.0",
        "mockgoose": "^8.0.1",
        "mongo-unit": "^1.4.4",
        "nodemon": "^1.18.10",
        "nyc": "^13.2.0",
        "selenium-webdriver": "^4.0.0-alpha.1"
    }
}
